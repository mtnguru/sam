function sa_neato_preprocess_node(&$variables) {
  $view_mode = $variables['elements']['#view_mode'];
  $node = $variables['node'];

  if ($view_mode == 'full') {
  }

  if ($view_mode == 'search_result') {
    if ($node->bundle() == 'article') {
      $variables['content']['#item_type'] = $variables['node']->type->entity->label();
    }
  }
}

